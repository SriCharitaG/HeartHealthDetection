<% if(success && success.length){ %>
  <div class="alert alert-success text-center my=0" role="alert">
    <%= success %>
  </div>
<% } %>



<% if(error && error.length){ %>
<!-- <%  console.log(error) %> -->
  <div class="alert alert-danger text-center my=0" role="alert">
        <%= error %>
  </div>
<% } %>













<style>
  .alert {
    width: 25%;
    margin-left: 37.5%;
    margin-top: 0.5%;
    line-height: 0.3;

    position:fixed; 
    z-index:9999; 
  }



  /* Define fade-out animation */
  .fade-out {
    opacity: 1;
    transition: opacity 0.5s ease-out;
    /* Adjust the duration and timing function as needed */
  }

  .fade-out.hidden {
    opacity: 0;
  }
</style>




<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', (event) => {
    // Get the flash message element
    const flashMessage = document.querySelector('.alert');

    // Check if the flash message element exists
    if (flashMessage) {
      // Add fade-out animation
      flashMessage.classList.add('fade-out');

      // Set a timeout to remove the flash message after the animation completes
      setTimeout(() => {
        flashMessage.classList.add('hidden');  // Hide the flash message
      }, 1500);  // Wait for the animation duration (2 seconds)

      // Remove the flash message from the DOM after the animation completes
      setTimeout(() => {
        flashMessage.remove();
      }, 2000);  // Wait for the animation duration plus an additional delay (1 second)
    }
  });
</script>